{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "strict": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    },
  },
  "include": ["./src/**/*"]
}
