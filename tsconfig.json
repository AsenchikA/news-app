{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "strict": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@store/*": ["store/*"],
      "@app-types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@mocks/*": ["mocks/*"],
    },
    "types": ["node", "@testing-library/jest-dom"]
  },
  "include": ["./src/**/*"]
}
